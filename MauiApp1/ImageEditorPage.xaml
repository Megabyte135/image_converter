<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.ImageEditorPage"
    Title="Редактирование изображения">
    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">

        <Image x:Name="editableImage" HeightRequest="200" Aspect="AspectFit" IsVisible="False" />

        <VerticalStackLayout x:Name="buttonsLayout" IsVisible="False" Spacing="10">
            <Button x:Name="cropButton" Text="Обрезать"/>
            <Button x:Name="filterButton" Text="Фильтр"/>
            <Button x:Name="convertButton" Text="Конвертировать"/>
            <Button x:Name="saveButton" Text="Сохранить"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>